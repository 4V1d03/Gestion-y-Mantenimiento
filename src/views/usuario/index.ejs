<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Inicio Usuarios</title>

  <!-- Bootstrap & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<body class="">

  <div class="container mt-5">
    <h2 class="text-center mb-4 fw-bold text-dark">Lista de Usuarios</h2>

    <div class="d-flex justify-content-between mb-4">
      <a href="/usuarios/crear" class="btn btn-success fw-semibold">
        <i class="bi bi-person-plus-fill"></i> Nuevo Usuario
      </a>
      <a href="/" class="btn btn-secondary fw-semibold">
        <i class="bi bi-house"></i> Inicio
      </a>
    </div>

    <div class="table-responsive">
      <table class="table table-hover text-center align-middle">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Especialidad</th>
            <th>Teléfono</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% usuarios.forEach(u => { %>
            <tr>
              <td><%= u.id %></td>
              <td><%= u.nombre %></td>
              <td><%= u.email %></td>
              <td><%= u.rol %></td>
              <td><%= u.especialidad %></td>
              <td><%= u.telefono || '-' %></td>
              <td>
                <a href="/usuarios/ver/<%= u.id %>" class="btn btn-info btn-sm text-white">
                  <i class="bi bi-eye-fill"></i>
                </a>
                <a href="/usuarios/editar/<%= u.id %>" class="btn btn-warning btn-sm">
                  <i class="bi bi-pencil-square"></i>
                </a>
                <form action="/usuarios/delete" method="POST" class="d-inline">
                  <input type="hidden" name="id" value="<%= u.id %>">
                  <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('¿Eliminar este usuario?')">
                    <i class="bi bi-trash-fill"></i>
                  </button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

</body>
</html>