<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Gestión de Equipos</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<body>
  <div class="container mt-5">
    <h2 class="text-center mb-4">Lista de Equipos</h2>

    <div class="d-flex justify-content-between mb-3">
        <a href="/equipos/crear" class="btn btn-success fw-semibold">
            <i class="bi bi-tools me-1"></i> Nuevo Equipo
        </a>
        <a href="/" class="btn btn-secondary">
            <i class="bi bi-house"></i> Inicio
        </a>
    </div>

    <div class="table-responsive">
      <table class="table table-hover text-center align-middle">
        <thead class="table-dark">
          <tr>
            <th><i class="bi bi-hash"></i> ID</th>
            <th><i class="bi bi-pc-display"></i> Tipo</th>
            <th><i class="bi bi-cpu-fill"></i> Marca</th>
            <th><i class="bi bi-box-seam"></i> Modelo</th>
            <th><i class="bi bi-upc-scan"></i> N° Serie</th>
            <th><i class="bi bi-check-circle-fill"></i> Estado</th>
            <th><i class="bi bi-gear-fill"></i> Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% equipos.forEach(eq => { %>
            <tr>
              <td><%= eq.id %></td>
              <td><%= eq.tipo %></td>
              <td><%= eq.marca || '-' %></td>
              <td><%= eq.modelo || '-' %></td>
              <td><%= eq.numero_serie %></td>
              <td><%= eq.estado %></td>
              <td>
                <a href="/equipos/ver/<%= eq.id %>" class="btn btn-info btn-sm text-white">
                  <i class="bi bi-eye-fill"></i>
                </a>
                <a href="/equipos/editar/<%= eq.id %>" class="btn btn-warning btn-sm">
                  <i class="bi bi-pencil-square"></i>
                </a>
                <form action="/equipos/delete" method="POST" class="d-inline">
                  <input type="hidden" name="id" value="<%= eq.id %>">
                  <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('¿Eliminar este equipo?')">
                    <i class="bi bi-trash-fill"></i>
                  </button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
